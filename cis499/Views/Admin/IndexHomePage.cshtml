@model IEnumerable<cis499.Models.HomePage>

@{
    ViewData["Title"] = "IndexHomePage";
    Layout = "AdminLayout";
}

<h1>IndexHomePage</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Background Image
            </th>
            <th>
                Title
            </th>
            <th>
                About Us
            </th>
            <th>
                Description
            </th>
            <th>
                Email
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Address
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ImagePath)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Text5)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Text1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Text2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Text3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Text4)
                </td>
                <td>
                    <a asp-controller="Admin" asp-action="EditHomePage" asp-route-id="@item.Id">Edit</a> |
                </td>
            </tr>
        }
    </tbody>
</table>
