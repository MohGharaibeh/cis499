@model cis499.Models.Testimonial
@{
    ViewData["Title"] = "AddTestimonial";
    Layout = "HomeLayoutAfterLogin";
}
<div style="margin-left:400px; margin-top:200px;">
    <h4>Testimonial</h4>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="AddTestimonial">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="TestMessage" class="control-label">Message</label>
                    <textarea asp-for="TestMessage" class="form-control"></textarea>
                    <span asp-validation-for="TestMessage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>