@model IEnumerable<cis499.Models.CategoryRecipe>

@{
    ViewData["Title"] = "ShowCategory";
    Layout = "~/Views/Shared/ChefLayout.cshtml";
}
<div class="row">

    @foreach (var item in Model)
    {
        <div class="card" style="width: 18rem;">
            <img src="@Url.Content("~/images/" + item.ImagePath)" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">@item.Description</p>
                @*                    <a asp-controller="Chefs" asp-action="ShowRecibeByChef" asp-route-id="@item.Id" class="btn btn-primary">Show Recipe</a>
            *@
            </div>
        </div>
    }
</div>