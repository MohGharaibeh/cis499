@model cis499.Models.Useraccount

@{

    Layout = "ChefLayout";

}

<h1>View Profile</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Fname)</dd>

        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Lname)</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            <img src=@Url.Content("~/images/" + Model.Imagepath) asp-append-version="true" style="border-radius: 20%;" width="100" height="100" />
        </dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>
    </dl>
</div>
<div>
    <a asp-controller="Chefs" asp-action="EditProfile" asp-route-id="@Model?.Id">Edit</a> |
</div>
